<div class="navbar px-3">
	<div class="container">
		<div class="col-md-2">
			<button @onclick="@(() => MoveToPage("/"))" class="btn btn-primary nav-addin"><div>Home</div></button>
		</div>
		<div class="col-md-2">
			<button @onclick="@(() => MoveToPage("/firstaddin"))" class="btn btn-primary nav-addin"><div>First add-in</div></button>
		</div>
		<div class="col-md-2">
			<button @onclick="@(() => MoveToPage("/helloworld"))" class="btn btn-primary nav-addin"><div>Hello world</div></button>
		</div>
		<div class="col-md-2">
			<button @onclick="@(() => MoveToPage("/requestcontextdemo"))" class="btn btn-primary nav-addin"><div>Request context</div></button>
		</div>
		<div class="col-md-2">
			<button @onclick="@(() => MoveToPage("/interactwithparagraphs"))" class="btn btn-primary nav-addin"><div>Paragraphs</div></button>
